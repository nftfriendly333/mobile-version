<body>
    <div class="container">
        <img src="https://pbs.twimg.com/profile_images/1954960199862673408/5ByROhul_400x400.jpg" alt="Player vs. Environment Logo" class="logo">
        <h1>Player vs. Environment</h1>
        <button id="connectButton">Connect MetaMask</button>
        <p id="account">No account connected</p>
        <p class="status" id="status"></p>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/web3/4.2.0/web3.min.js"></script>
    <script>
        const connectButton = document.getElementById('connectButton');
        const accountDisplay = document.getElementById('account');
        const statusDisplay = document.getElementById('status');

        async function checkMetaMask() {
            if (typeof window.ethereum !== 'undefined') {
                connectButton.addEventListener('click', connectWallet);
                const accounts = await ethereum.request({ method: 'eth_accounts' });
                if (accounts.length > 0) {
                    updateAccount(accounts[0]);
                }
            } else {
                accountDisplay.textContent = 'MetaMask not detected';
                statusDisplay.textContent = 'Please install MetaMask!';
                connectButton.disabled = true;
            }
        }

        async function connectWallet() {
            try {
                const accounts = await ethereum.request({ method: 'eth_requestAccounts' });
                updateAccount(accounts[0]);
                statusDisplay.textContent = 'Connected successfully!';
            } catch (error) {
                console.error(error);
                statusDisplay.textContent = 'Connection failed. Try again.';
            }
        }

        function updateAccount(account) {
            accountDisplay.textContent = `Connected: ${account.slice(0, 6)}...${account.slice(-4)}`;
            connectButton.textContent = 'Wallet Connected';
            connectButton.disabled = true;
            statusDisplay.textContent = 'Ready for PvE!';
        }

        ethereum.on('accountsChanged', (accounts) => {
            if (accounts.length > 0) {
                updateAccount(accounts[0]);
            } else {
                accountDisplay.textContent = 'No account connected';
                connectButton.textContent = 'Connect MetaMask';
                connectButton.disabled = false;
                statusDisplay.textContent = '';
            }
        });

        ethereum.on('chainChanged', () => {
            window.location.reload();
        });

        checkMetaMask();
    </script>
</body>
